<div class="chat-window" ng-controller="AdminChatManagerController" ng-show='visible'>
  <form ng-submit="submit()">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-comment"></span> Chat
                    <div class="btn-group pull-right">
                        <button ng-click="load()" type="button" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-refresh"></span>
                        </button>
                        <button ng-click="close()" type="button" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-chevron-down"></span>
                        </button>
                    </div>
                </div>
                <div class="panel-body">
                    <ul class="chat">
                        <li class="clearfix" ng-repeat="message in messages">
                            <div class="chat-body clearfix">
                              <div class="header">

                                <strong class="primary-font" ng-class="{ 'pull-right': message.source == 'student' }">
                                  {{message.name}}
                                  <span ng-show="message.via != undefined && message.via != ''">
                                    (via {{message.via}})
                                  </span>
                                </strong> 
                                <div ng-show="true" style="color:red;font-style:italic">
                                  {{message.sent_message}}
                                </div>
                                <small class="text-muted" ng-class="{ 'pull-right': message.source == 'student' }">
                                  <span class="glyphicon glyphicon-time"></span><span class="timeago" title="{{message.time}}"></span>
                                </small>
                                </br />
                              </div>
                              <p>
                                {{message.message}}
                              </p>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="panel-footer">
                  <div class="row">
                      <div class="col-md-12">
                        <div>
                            <input id="btn-input" type="text" ng-model="new_message" class="form-control input-sm" placeholder="Type your message here...">
                        </div>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-md-12" style="padding:3px;text-align:center;">
                        <span>
                            <button class="btn btn-warning btn-sm" id="btn-chat" ng-click="submitIm()" type="submit">IM</button>
                            <button class="btn btn-warning btn-sm" id="btn-chat" ng-click="submitText()">Text</button>
                        </span>
                      </div>
                  </div>
                  <div class="row" ng-show="lastResponseIsFromAStudent()">
                      <div class="col-md-12" style="padding:3px;text-align:center;">
                        <span>
                          <button class="btn btn-info btn-sm" id="btn-chat" ng-click="markUserAsNotNeedingAResponse()"><%= Words.for(:chat, :remove_from_chat_alerts) %></button>
                        </span>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
  </form>
</div>